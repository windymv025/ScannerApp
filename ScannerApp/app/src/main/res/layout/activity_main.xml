<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnLoadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="Load Picture" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Upload Drive"
            android:id="@+id/btn_UploadDrive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonLoadPicture"
            tools:layout_editor_absoluteY="0dp"></Button>
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" />

    <ListView
        android:id="@+id/lvThumbnail"
        android:layout_width="409dp"
        android:layout_height="569dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Camera"
        app:layout_constraintTop_toBottomOf="@+id/btn_UploadDrive"
        tools:layout_editor_absoluteX="1dp" />

    <ImageButton
        android:id="@+id/btn_Camera"
        android:layout_width="62dp"
        android:layout_height="88dp"
        android:layout_gravity="right"
        android:background="@color/colorAccent"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:ignore="MissingConstraints" />
</LinearLayout>